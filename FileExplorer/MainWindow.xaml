<Window x:Class="FileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        mc:Ignorable="d"
        Title="Files Explorer" Height="350" Width="525">
    
    <Grid>
        <TreeView x:Name="FolderView" ItemsSource="{Binding Items}"
                  AllowDrop="True"
                  PreviewMouseLeftButtonDown="FolderView_PreviewMouseLeftButtonDown"
                  Drop="FolderView_Drop">
            
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Copy" Command="{Binding CopyCommand}" />
                                <MenuItem Header="Move" Command="{Binding MoveCommand}" />
                                <MenuItem Header="Delete" Command="{Binding DeleteCommand}" />
                                <MenuItem Header="Rename" Command="{Binding RenameCommand}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="35" Margin="3">
                            <Image.Source>
                                <MultiBinding Converter="{x:Static local:HeaderToImageConverter.Instance}">
                                    <Binding Path="Type"/>
                                    <Binding Path="IsExpanded" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            
        </TreeView>
    </Grid>
</Window>